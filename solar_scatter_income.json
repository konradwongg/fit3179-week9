{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/solar_top_postcodes.csv"},
  "mark": "point",
  "encoding": {
    "x": {"field": "MedianIncome", "type": "quantitative", "title": "Median Weekly Household Income ($)"},
    "y": {"field": "InstallationsPer1000", "type": "quantitative", "title": "Installations per 1,000 dwellings"},
    "color": {
    "field": "State",
    "type": "nominal",
    "scale": {
    "domain": ["NSW","VIC","QLD","SA","WA","TAS","NT","ACT"],
    "range":  ["#1565C0","#2E7D32","#F9A825","#7B1FA2","#00897B","#EF6C00","#8E24AA","#455A64"]
  },
    "legend": {"title": "State"}
},
    "tooltip": [
      {"field": "Postcode"},
      {"field": "MedianIncome"},
      {"field": "InstallationsPer1000"}
    ]
  },
  "title": "Income vs Solar Adoption"
}
